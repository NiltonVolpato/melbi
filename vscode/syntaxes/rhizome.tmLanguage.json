{
  "name": "Rhizome",
  "scopeName": "source.rhizome",
  "fileTypes": ["rz", "rhizome"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#format-strings" },
    { "include": "#bytes" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#types" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rhizome",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rhizome",
          "match": "\\b(if|then|else|where|match)\\b"
        },
        {
          "name": "keyword.operator.logical.rhizome",
          "match": "\\b(not|and|or|otherwise)\\b"
        },
        {
          "name": "keyword.operator.rhizome",
          "match": "\\b(as)\\b"
        },
        {
          "name": "storage.type.rhizome",
          "match": "\\b(Record)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.rhizome",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rhizome",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rhizome",
              "match": "\\\\(n|r|t|\\\\|\"|'|u[0-9a-fA-F]{4}|U[0-9a-fA-F]{8})"
            }
          ]
        },
        {
          "name": "string.quoted.single.rhizome",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.rhizome",
              "match": "\\\\(n|r|t|\\\\|\"|'|u[0-9a-fA-F]{4}|U[0-9a-fA-F]{8})"
            }
          ]
        }
      ]
    },
    "format-strings": {
      "patterns": [
        {
          "name": "string.quoted.double.format.rhizome",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rhizome",
              "match": "\\\\(n|r|t|\\\\|\"|'|u[0-9a-fA-F]{4}|U[0-9a-fA-F]{8})|\\{\\{|\\}\\}"
            },
            {
              "name": "meta.embedded.expression.rhizome",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.single.format.rhizome",
          "begin": "f'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.rhizome",
              "match": "\\\\(n|r|t|\\\\|\"|'|u[0-9a-fA-F]{4}|U[0-9a-fA-F]{8})|\\{\\{|\\}\\}"
            },
            {
              "name": "meta.embedded.expression.rhizome",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "bytes": {
      "patterns": [
        {
          "name": "string.quoted.double.bytes.rhizome",
          "begin": "b\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rhizome",
              "match": "\\\\(n|r|t|\\\\|\"|'|x[0-9a-fA-F]{2})"
            }
          ]
        },
        {
          "name": "string.quoted.single.bytes.rhizome",
          "begin": "b'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.rhizome",
              "match": "\\\\(n|r|t|\\\\|\"|'|x[0-9a-fA-F]{2})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.rhizome",
          "match": "-?\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.rhizome",
          "match": "-?\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.rhizome",
          "match": "=>"
        },
        {
          "name": "keyword.operator.arithmetic.rhizome",
          "match": "\\^|\\*|\\/|\\+|\\-"
        },
        {
          "name": "keyword.operator.assignment.rhizome",
          "match": "="
        },
        {
          "name": "punctuation.accessor.rhizome",
          "match": "\\."
        },
        {
          "name": "punctuation.separator.rhizome",
          "match": ","
        },
        {
          "name": "punctuation.colon.rhizome",
          "match": ":"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.rhizome",
          "match": "\\b[A-Z][A-Za-z0-9_]*(::([A-Z][A-Za-z0-9_]*))*\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.quoted.rhizome",
          "match": "`[A-Za-z0-9\\-_.:/ ]+`"
        },
        {
          "name": "variable.other.rhizome",
          "match": "\\b[a-z_][A-Za-z0-9_]*\\b"
        }
      ]
    }
  }
}
